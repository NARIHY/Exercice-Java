import java.util.Scanner;
public class Tp30 {
	/*
	 * Écrire un programme qui s'appelle Factorielle qui permet à l'utilisateur 
	 * de saisir un entier naturel n puis qui affiche à l'écran la factorielle de celui-ci.
	 */

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		System.out.println("Saisir un entier naturel:");
		int nombre = sc.nextInt();
		System.out.println(nombre);
		int r = 0;
		for (int i = nombre; i > 1; i--) {
			r = nombre *= i;
			System.out.println("Le factoriel de " + nombre + "!"+ " est: "+ r);
		}
		
	}

}
